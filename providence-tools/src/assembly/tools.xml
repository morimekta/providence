<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>tools-${project.version}</id>
    <formats>
        <format>tar.gz</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <fileSets>
        <fileSet>
            <directory>${project.basedir}/src/deb/bin</directory>
            <includes>
                <include>*</include>
            </includes>
            <outputDirectory>bin</outputDirectory>
            <useDefaultExcludes>true</useDefaultExcludes>
        </fileSet>
        <fileSet>
            <directory>${project.parent.basedir}/providence-tools-compiler/target/</directory>
            <includes>
                <include>providence-tools-compiler.jar</include>
            </includes>
            <outputDirectory>share/providence</outputDirectory>
            <useDefaultExcludes>true</useDefaultExcludes>
        </fileSet>
        <fileSet>
            <directory>${project.parent.basedir}/providence-tools-config/target/</directory>
            <includes>
                <include>providence-tools-config.jar</include>
            </includes>
            <outputDirectory>share/providence</outputDirectory>
            <useDefaultExcludes>true</useDefaultExcludes>
        </fileSet>
        <fileSet>
            <directory>${project.parent.basedir}/providence-tools-converter/target/</directory>
            <includes>
                <include>providence-tools-converter.jar</include>
            </includes>
            <outputDirectory>share/providence</outputDirectory>
            <useDefaultExcludes>true</useDefaultExcludes>
        </fileSet>
        <fileSet>
            <directory>${project.parent.basedir}/providence-tools-rpc/target/</directory>
            <includes>
                <include>providence-tools-rpc.jar</include>
            </includes>
            <outputDirectory>share/providence</outputDirectory>
            <useDefaultExcludes>true</useDefaultExcludes>
        </fileSet>
    </fileSets>
</assembly>
