                <configuration>
                    <skip>${maven.javadoc.skip}</skip>
                    <failOnError>true</failOnError>
                    <doclint>all</doclint>
                    <notimestamp>true</notimestamp>
                    <nodeprecatedlist>true</nodeprecatedlist>
                    <quiet>true</quiet>
                    <sourceFileIncludes>net/morimekta/providence/**/*.java</sourceFileIncludes>
